datasource db {
  provider = "postgresql" // atau "mysql" sesuai DB kamu
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String         @id @default(uuid())
  name      String
  email     String         @unique
  password  String
  image     String?
  tokens    RefreshToken[]
  role      String         @default("student")
  contents  Content[]      @relation("UserContents")
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
}

model Category {
  id          String    @id @default(uuid())
  name        String
  description String?
  contents    Content[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Content {
  id         String  @id @default(uuid())
  title      String
  body       String
  thumbnail  String?
  categoryId String
  pemateriId String

  category Category @relation(fields: [categoryId], references: [id])
  pemateri User     @relation("UserContents", fields: [pemateriId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  expiresAt DateTime
  createdAt DateTime @default(now())
}
